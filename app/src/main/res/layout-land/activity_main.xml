<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClr"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            android:minHeight="60dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonNeg" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonNeg"
            app:layout_constraintStart_toEndOf="@+id/buttonMultiply" android:layout_marginStart="8dp"/>
    <Button
            android:text="NEG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNeg"
            android:minWidth="60dp" android:textSize="20sp" android:textStyle="bold"
            android:minHeight="60dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:focusable="false" android:focusableInTouchMode="false"
            android:textStyle="bold" android:textSize="25sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            app:layout_constraintEnd_toEndOf="@+id/button2" android:minHeight="60dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" android:minHeight="60dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/button5" app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            android:minHeight="60dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button6" android:minHeight="60dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:minHeight="60dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="@+id/button8" android:minHeight="60dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toStartOf="@+id/button9" android:minHeight="60dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:minWidth="60dp"
            android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button8" android:minHeight="60dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:minWidth="60dp" android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button9" android:minHeight="60dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:minHeight="60dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button9" android:layout_marginStart="8dp"
            android:minHeight="60dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            android:minWidth="60dp" android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button6" android:layout_marginStart="8dp"
            android:minHeight="60dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp" android:minHeight="60dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:minWidth="60dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginStart="8dp"
            android:minHeight="60dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            android:minWidth="60dp" android:textSize="30sp"
            android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/button3" android:minHeight="60dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:minWidth="60dp" android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button0" android:minHeight="60dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button1" android:minWidth="60dp" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            android:textStyle="bold" android:textSize="25sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>